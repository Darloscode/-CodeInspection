{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".", // ðŸ‘ˆ Agregado
    "paths": {
      "@shared-theme/*": ["src/shared-theme/*"],
      "@/*": ["src/*"],
      "@components/*": ["components/*"]
    },
    "jsx": "react-jsx", // âœ… Esto habilita JSX con React 17+ (o usa "react" si es mÃ¡s antiguo)
    "esModuleInterop": true, // âœ… Recomendado por ts-jest
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["jest", "node"] // âœ… Muy importante para que Jest y Node sean reconocidos
  },
  "include": ["src", "jest.setup.ts"]
}
